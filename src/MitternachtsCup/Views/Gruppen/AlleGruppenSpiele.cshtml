@model IEnumerable<MitternachtsCup.ViewModels.SpielVm>

@{
    
}

<h1>Alle genertierten Gruppenspiele</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Platte</th>
        <th>Startzeit</th>
        <th>SpielDauer</th>
        <th>Team A</th>
        <th>Team B</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Platte</td>
        <td>@item.StartZeit</td>
        <td>@item.SpielDauer</td>
        <td>@item.TeamA.Name</td>
        <td>@item.TeamB.Name</td>
        <td>
            <a asp-controller="Spiel" asp-action="Create" asp-route-spielId="@item.Id" class="btn btn-sm btn-outline-secondary">Post</a>
        </td>
        
    </tr>
    }
    </tbody>
</table>