@model MitternachtsCup.ViewModels.GruppeVm

@{
    
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/custom-styles.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        header {
            background-color: #003366;
            color: #ffffff;
        }
        .navbar {
            background-color: #003366;
        }
        .navbar .nav-link {
            color: #ffffff;
            transition: color 0.3s;
        }
        .navbar .nav-link:hover {
            color: #ffcc00;
        }
        h2, h3 {
            color: #2b2c2d;
        }
        .table {
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #003366;
            color: #ffffff;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .table td, .table th {
            vertical-align: middle;
            text-align: center;
        }
    </style>
    <title>Tischtennis Turnier - Gruppe E</title>
</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="Index">Alle Spiele</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeA">Gruppe A</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeB">Gruppe B</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeC">Gruppe C</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeD">Gruppe D</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeE">Gruppe E</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeF">Gruppe F</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeG">Gruppe G</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="GruppeH">Gruppe H</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h2>Gruppe E</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Platz</th>
        <th>Name</th>
        <th>Punkte</th>
        <th>Bilanz</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var team in Model.PlatzierungTeams)
    {
    <tr>
        <td>@team.Platzierung</td>
        <td>@team.Name</td>
        <td>@team.Punkte</td>
        <td>@team.Spiele : @team.Gegenspiele</td>
    </tr>
    }
    </tbody>
</table>

<h3>Kommende Gruppenspiele</h3>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Tisch</th>
        <th>Startzeit</th>
        <th>TeamA Name</th>
        <th>TeamB Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var spiel in Model.GruppenSpiele)
    {
    <tr>
        <td>@spiel.Name</td>
        <th>@spiel.Platte</th>
        <td>@spiel.StartZeit</td>
        <td>@spiel.TeamAName</td>
        <td>@spiel.TeamBName</td>
    </tr>
    }
    </tbody>
</table>

<h3>Vergangene Gruppenspiele</h3>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Tisch</th>
        <th>Startzeit</th>
        <th>TeamA Name</th>
        <th>TeamB Name</th>
        <th>Ergebnis</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var spiel in Model.VergangeneGruppenSpiele)
    {
    <tr>
        <td>@spiel.Name</td>
        <th>@spiel.Platte</th>
        <td>@spiel.StartZeit</td>
        <td>@spiel.TeamAName</td>
        <td>@spiel.TeamBName</td>
        <td>
            @if (spiel.Ergebnis != null)
            {
            @:@spiel.Ergebnis.PunkteTeamA : @spiel.Ergebnis.PunkteTeamB
            }

        </td>
    </tr>
    }
    </tbody>
</table>

