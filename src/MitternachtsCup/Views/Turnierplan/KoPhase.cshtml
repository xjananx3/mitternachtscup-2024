<h2>Achtelfinale</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Platte</th>
        <th>Startzeit</th>
        <th>TeamA Name</th>
        <th>TeamB Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var spiel in Model.Achtelfinals)
    {
    <tr>
        <td>@spiel.Name</td>
        <th>@spiel.Platte</th>
        <td>@spiel.StartZeit</td>
