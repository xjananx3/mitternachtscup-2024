@model MitternachtsCup.ViewModels.KoPhaseVm

@{

}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/custom-styles.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        header {
            background-color: #003366;
            color: #ffffff;
        }
        .navbar {
            background-color: #003366;
        }
        .navbar .nav-link {
            color: #ffffff;
            transition: color 0.3s;
        }
        .navbar .nav-link:hover {
            color: #ffcc00;
        }
        h2, h3 {
            color: #2a2d30;
        }
        .table {
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #003366;
            color: #ffffff;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .table td, .table th {
            vertical-align: middle;
            text-align: center;
        }
    </style>
    <title>KO Phase</title>
</head>

<h2>Achtelfinale</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Platte</th>
        <th>Startzeit</th>
        <th>TeamA Name</th>
        <th>TeamB Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var spiel in Model.Achtelfinals)
    {
    <tr>
        <td>@spiel.Name</td>
        <th>@spiel.Platte</th>
        <td>@spiel.StartZeit</td>
        <td>@spiel.TeamAName</td>
        <td>@spiel.TeamBName</td>
    </tr>
    }
    </tbody>
</table>

