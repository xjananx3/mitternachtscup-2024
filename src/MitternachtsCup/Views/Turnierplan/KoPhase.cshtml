<h2>Kommende Ko-Spiele</h2>
<h3>Achtelfinale</h3>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Platte</th>
        <th>Startzeit</th>
        <th>TeamA</th>
        <th>TeamB</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var spiel in Model.Achtelfinals)
    {
        <tr>
            <td>@spiel.Name</td>
            <th>@spiel.Platte</th>
            <td>@spiel.StartZeit</td>
